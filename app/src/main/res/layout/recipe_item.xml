<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:id="@+id/parentLayoutRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/relative_layout_margin">

        <ImageView
            android:contentDescription="@string/recipe_picture"
            android:id="@+id/bell"
            android:layout_width="@dimen/bell_size"
            android:layout_height="@dimen/bell_size"
            android:src="@drawable/bell" />

        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/recipe_text_margin_left"
            android:layout_marginLeft="@dimen/recipe_text_margin_left"
            android:layout_toEndOf="@+id/bell"
            android:layout_toRightOf="@+id/bell"
            android:hint="@string/recipe_name"
            android:textSize="@dimen/recipe_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_name"
            android:layout_marginStart="@dimen/servings_text_margin_left"
            android:layout_marginLeft="@dimen/servings_text_margin_left"
            android:layout_toEndOf="@+id/bell"
            android:layout_toRightOf="@+id/bell"
            android:text="@string/serving" />

    </RelativeLayout>


</android.support.v7.widget.CardView>